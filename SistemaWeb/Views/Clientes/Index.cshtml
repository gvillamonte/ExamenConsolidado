@model IEnumerable<SistemaWeb.Models.Clientes>

@{
    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink(" Agregar nuevo cliente", "Create", null, new { @class = "btn btn-primary fa-solid fa-user-plus" })
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre del cliente</th>
            <th>Correo electrónico</th>
            <th style="width:200px">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td class="text-end">
                    @Html.ActionLink(" ", "Edit", new { id = item.ClienteId }, new { @class = "btn btn-sm btn-warning me-1 fa-solid fa-pen-to-square", title = "Editar cliente" })
                    @Html.ActionLink(" ", "Details", new { id = item.ClienteId }, new { @class = "btn btn-sm btn-info me-1 fa-solid fa-circle-info", title = "Ver detalles" })
                    @Html.ActionLink(" ", "Delete", new { id = item.ClienteId }, new { @class = "btn btn-sm btn-danger fa-solid fa-trash", title = "Eliminar cliente" })
                </td>
            </tr>
        }
    </tbody>
</table>
